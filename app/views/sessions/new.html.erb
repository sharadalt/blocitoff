 <div style="width:600px; height:350px; margin-left:150px;background-color:#D2B48C; border: 3px solid #191970; color:black">

 <div class="row"> 
   <div class="col-md-8"> 
     <h2>Sign In</h2>
     <%= form_for :session, url: sessions_path do |f|  %>
       <div class="form-group">
         <%= f.label :email %>
         <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Enter email" %>
       </div>
       <div class="form-group">
         <%= f.label :password %>
         <%= f.password_field :password, class: 'form-control', placeholder: "Enter password" %>
       </div>
       <p><%= link_to "Forgotten password?", new_password_reset_path %></p>
       <div class="form-group">
          <%= f.label :remember_me, class: 'checkbox' do %>
            Remember me  <%= f.check_box :remember_me, :style => "margin-left: 0px;" %>
          <% end %>
         <%= f.submit "Sign in", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>
</div>