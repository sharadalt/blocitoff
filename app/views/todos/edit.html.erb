<div style="width:500px;height:400px;float:left;background-color:#D2B48C;margin-left:120px;margin-right:400px;">
<%= render "users/project_name"%>
<%= render "users/logged_in" %>
<h1 style="margin-left:40px;">Edit Todo</h1>
 <div class="row">
   <div class="col-md-8">
     <%= form_for [@user, @todo] do |f| %>
       <% if @todo.errors.any? %>
         <div class="alert alert-danger">
           <h4><%= pluralize(todo.errors.count, "error") %>.</h4>
           <ul>
             <% todo.errors.full_messages.each do |msg| %>
               <li><%= msg %></li>
             <% end %>
           </ul>
         </div>
       <% end %>
       <div class="form-group", style="margin-left:40px;">
         <%= form_group_tag(@todo.errors[:todo_item]) do %>
           <%= f.label :todo_item %>
           <%= f.text_field :todo_item, class: 'form-control', placeholder: "Enter todo" %>
         <% end %>
       </div>
       <div class="form-group", style="margin-left:40px;">
         <%= f.submit "Save", class: 'btn btn-primary' %>
       </div>
     <% end %>
     <%#= render partial: 'form', locals: {todo: @todo } %>
   </div>
 </div>
</div>
 
 